@{
    ViewBag.Title = "Đăng nhập";
}
<div class="d-flex justify-content-center align-items-center" style="height: 50vh;">
    <div class="login-form border rounded-3 p-4 shadow bg-white" style="width:500px">
        <h2 class="text-center mt-3">Đăng Nhập</h2>
        <form method="post" action="~/Account/Login">
            @Html.AntiForgeryToken()
            <div class="mb-3 mt-3">
                <label for="username"  class="form-label"><strong>Tên Đăng Nhập:</strong></label>
                <input type="text" class="form-control" name="username" autofocus placeholder="Nhập tên đăng nhập"
                value="@ViewBag.UserName">
            </div>
            <div class="mb-3 mt-3">
                <label for="password" class="form-label"><strong>Mật Khẩu:</strong></label>
                <input type="password" class="form-control" name="password" placeholder="Nhập mật khẩu">
                <h6 class="mt-3" style="color:red">@Html.ValidationMessage("Error")</h6>
            </div>
            <button type="submit" class="btn btn-primary w-100"><strong>Đăng Nhập</strong></button>
            <div class="mt-3 text-center">
                <span>Chưa có tài khoản? <a class="primary" href="~/Account/SignUp">Đăng ký ngay</a></span>
            </div>
        </form>
    </div>
</div>