@model SV21T1020123.DomainModels.Category
<div class="box box-danger">
    <div class="box-body">
        <form action="~/Category/Delete/@Model.CategoryID" method="post">
            <div class="form-group disabled">
                <label>Tên loại hàng:</label>
                <p class="form-control-static form-control">@Model.CategoryName</p>
            </div>

            <div class="form-group">
                <label>Miêu tả:</label>
                <p class="form-control-static form-control">@Model.Description</p>
            </div>

            <div class="form-group">
                @if (SV21T1020123.BusinessLayers.CommonDataService.InUsedCategory(Model.CategoryID) == false)
                {
                    <button type="submit" class="btn btn-danger">
                        <i class="fa fa-trash"></i> Xóa dữ liệu
                    </button>
                }
                <a href="~/Category" class="btn btn-default"> Quay lại</a>
            </div>
        </form>
    </div>
</div>
