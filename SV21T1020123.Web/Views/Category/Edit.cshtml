@model SV21T1020123.DomainModels.Category

<div class="box box-primary">
    <div class="box-body">
        <form method="post" action="~/Category/Save">
            <input type="text" hidden name="@nameof(Model.CategoryID)" value="@Model.CategoryID">
            <div class="form-group">
                <label>Tên loại hàng:</label>
                <input type="text" class="form-control" name="@nameof(Model.CategoryName)" value="@Model.CategoryName" />
                @Html.ValidationMessage(nameof(Model.CategoryName))
            </div>

            <div class="form-group">
                <label>Miêu tả:</label>
                <input type="text" class="form-control" name="@nameof(Model.Description)" value="@Model.Description" />
                @Html.ValidationMessage(nameof(Model.Description))
            </div>

            <div class="form-group">
                <button type="submit" class="btn btn-primary">
                    <i class="fa fa-floppy-o"></i> Lưu dữ liệu
                </button>
                <a href="~/Category" class="btn btn-default"> Quay lại</a>
            </div>
            @Html.ValidationMessage("Error")    
        </form>
    </div>
</div>
