@model SV21T1020123.Web.Models.CategorySearchResult
@{
    Layout = null;
}
<p style="margin: 10px 0 10px 0">
    Có <strong>@Model.RowCount</strong> loại hàng trong số <strong>@Model.PageCount</strong> trang
</p>

<div class="table">
    <table class="table table-striped table-bordered table-hover table-responsive">
        <thead>
            <tr class="bg-primary">
                <th width="200">Tên loại hàng</th>
                <th>Miêu tả</th>
                <th style="width: 80px"></th>
            </tr>
        </thead>
        <tbody class="table-striped">
            @foreach (var item in Model.Data)
            {
                <tr>
                    <td>@item.CategoryName</td>
                    <td>@item.Description</td>
                    <td class="text-right">
                        <a href="~/Category/Edit/@item.CategoryID" class="btn btn-xs btn-info">
                            <i class="fa fa-edit"></i>
                        </a>
                        <a href="~/Category/Delete/@item.CategoryID" class="btn btn-xs btn-danger">
                            <i class="fa fa-trash"></i>
                        </a>
                    </td>
                </tr>
            }

        </tbody>
    </table>

    <div class="text-center">
        <ul class="pagination">
            @for (int p = 1; p <= Model.PageCount; p++)
            {
                if (p == Model.Page)
                {
                    <li class="active"><a href="#">@p</a></li>
                }
                else
                {
                    <li><a href="javascript:;" onclick="doSearch(@p)">@p</a></li>
                }
            }

        </ul>
    </div>
</div>
